<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FollowersFragment">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/textinp"
        android:hint="Search"
        android:gravity="center_vertical"
        android:textColor="#000"
        android:textColorHint="#2b2b2b"
        android:paddingStart="20dp"
        android:layout_margin="10dp"
        android:drawableRight="@drawable/search24"
        android:paddingEnd="10dp"
        tools:ignore="HardcodedText,RtlHardcoded,UseCompatTextViewDrawableXml" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="followers"/>

</FrameLayout>